---
import { projectData } from './data'
import BaseLayout from '@/layouts/BaseLayout.astro'
import ListProjects from '@/components/ListProjects.vue'
---

<BaseLayout title="Projects" description="List of projects that I am proud of">
  <h1 class="mb-10 text-title">Projects 项目经历</h1>
  <div class="mb-16 sm:mb-24">
    {
      projectData.length > 0 && (
        <div>
          {projectData.map((i) => (
            <div mb-10>
              <h2 class="select-none relative h20 pointer-events-none">
                <span class="text-3.2em color-transparent font-bold text-stroke-1.5 text-stroke-hex-aaa op35 dark:op20 absolute top-0">
                  {i.title}
                </span>
              </h2>
              <ListProjects list={i.projects} />
            </div>
          ))}
        </div>
      )
    }
  </div>
  <div style="display: none">
    <!--帮助渲染图标，不知道原因-->
    <span class="i-mdi-book-edit"></span>
    <span class="i-mdi-api"></span>
    <span class="i-ant-design-bilibili-outlined"></span>
    <span class="i-mdi-email"></span>
    <span class="i-mdi-wechat"></span>
    <span class="i-ant-design-qq-outlined"></span>
  </div>
</BaseLayout>
